<!--  app/views/movies/search.html.erb -->
<h2>Similar movies for <em><%= @movie.title %></em></h2>

<ul id="movies">
<% @similar_movies.each do |similar_movie| %>
    <li>
        <%= similar_movie %>
    </li>
<% end %>

</ul>

<div class="row">
  <%= link_to 'Edit', edit_movie_path(@movie), :class => 'btn btn-primary col-2' %>
  <%= link_to 'Delete', movie_path(@movie), 'data-method' => 'delete', 'data-confirm' => 'Are you sure?', :class => 'btn btn-danger col-2' %>
  <%= link_to 'Back to movie list', movies_path, :class => 'btn btn-primary col-2' %>
  <%= link_to 'Find Movies With Same Director', search_similar_movies_path(@movie.title) %>
</div>
